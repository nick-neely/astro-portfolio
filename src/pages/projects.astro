---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Web Development</div>
  </div>

  <HorizontalCard
    title="Crumbl Craver"
    img="/crumbl_craver.webp"
    desc="Discover and track the latest Crumbl Cookie flavors with ease! Crumbl Craver, powered by Next.js and Supabase, offers real-time updates, user ratings, and personalized flavor notifications for cookie enthusiasts."
    url="https://crumblcraver.com/"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Recipe Realm"
    img="/recipe_realm.webp"
    desc="A web-based platform built with Flask where users can share, view, comment on, and manage their favorite recipes."
    url="https://reciperealm.net"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Exact Change Calculator"
    img="/change_calculator.webp"
    desc="A fast React app to calculate minimal change for any cash amount, powered by Vite for a sleek experience."
    url="https://github.com/nick-neely/exact-change-calculator"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Python Apps</div>
  </div>

  <HorizontalCard
    title="Payroll Calculator"
    img="/payroll_calculator.webp"
    desc="A payroll calculator that computes total hours worked, overtime, gross pay, FICA tax, and net pay, and saves the data in JSON format."
    url="https://github.com/nick-neely/payroll-calculator"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="File Sortify"
    img="/file_sortify.webp"
    desc="A application that automatically sorts files in a specified directory into categorized folders based on their file types. "
    url="https://github.com/nick-neely/file-sortify"
  />
</BaseLayout>
